
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ball2">

 <LinearLayout

     android:layout_width="wrap_content"
     android:layout_height="468dp"
     android:orientation="horizontal">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       android:layout_marginBottom="16dp"
       android:layout_marginLeft="48dp"
       android:padding="20dp"
       android:text="Team A"
       android:textStyle="bold"
       android:textSize="14sp"
       android:textColor="#616161"
       android:fontFamily="sans-serif-medium">


   </TextView>

   <TextView
       android:id="@+id/team_a_score"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="70dp"
       android:text="0"
       android:textSize="56sp"
       android:layout_marginBottom="24dp"
       android:textColor="#000000"
       android:fontFamily="sans-serif-light"
       >

   </TextView>

   <Button
       android:id="@+id/score_3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:onClick="scoreThree"
       android:text="+3 Points"
       android:layout_marginTop="24dp"
       android:layout_marginBottom="8dp">

   </Button>

   <Button
       android:id="@+id/score_2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="24dp"
       android:onClick="scoreTwo"
       android:text="+2 Points"
       android:layout_marginBottom="8dp"
       >

   </Button>

   <Button
       android:id="@+id/score_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="24dp"
       android:layout_marginLeft="24dp"
       android:onClick="scoreOne"
       android:text="FREE THROW">

   </Button>
  </LinearLayout>
  <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:background="@android:color/darker_gray"/>


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
       android:padding="20dp"
       android:text="Team B"
       android:textStyle="bold"
       android:textSize="14sp"
       android:layout_marginTop="16dp"
       android:textColor="#616161"

       android:fontFamily="sans-serif-medium">


   </TextView>

   <TextView
       android:id="@+id/team_b_score"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:text="0"
       android:textSize="56sp"
       android:textColor="#000000"
       android:fontFamily="sans-serif-light"
       android:layout_marginTop="16dp"
       android:layout_marginBottom="22dp">

   </TextView>

   <Button
       android:id="@+id/score_3b"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="18dp"
       android:onClick="scoreThreeB"
       android:text="+3 Points"
       android:layout_marginTop="22dp"
       >

   </Button>

   <Button
       android:id="@+id/score_2b"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="18dp"
       android:onClick="scoreTwoB"
       android:text="+2 Points"
       android:layout_marginTop="10dp">

   </Button>

   <Button
       android:id="@+id/score_1b"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="12dp"
       android:onClick="scoreOneB"
       android:text="FREE THROW"
       android:layout_marginTop="8dp">

   </Button>
  </LinearLayout>

 </LinearLayout>

 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textStyle="bold"
     android:text="RESET"
     android:layout_marginLeft="150dp"
      android:layout_marginRight="1dp"
     android:layout_marginTop="75dp"
     android:layout_marginBottom="32dp"
     android:id="@+id/ResetBotton"
     android:onClick="Reseting"
     >

 </Button>

</LinearLayout>



